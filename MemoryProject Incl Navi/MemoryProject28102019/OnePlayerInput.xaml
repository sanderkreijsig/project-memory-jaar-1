<Page x:Class="MemoryProject28102019.OnePlayerInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject28102019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OnePlayerInput">

    <Grid>
        <Frame x:Name="OnePlayerInputFrame"/>
        <StackPanel  Orientation="Vertical" Margin="0,0,0,35" VerticalAlignment="Center">
            <TextBlock  FontSize="25" Height="50" Width="150" Margin="0,0,0,35">Uw Naam:</TextBlock>
            <TextBox x:Name="PlayerInput" Text="" Height="50" Width="150" Margin="0,0,0,35" TextChanged="PlayerInput_TextChanged"/>
            <Button Content="Start Game" Margin="0,0,0,35" x:Name="StartTwoPlayerBTN" Click="StartOnePlayerBTN_Click" Height="50" Width="150" />
        </StackPanel>
    </Grid>
</Page>
