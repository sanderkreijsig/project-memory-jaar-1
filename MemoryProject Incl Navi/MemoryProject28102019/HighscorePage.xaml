<Page x:Class="MemoryProject28102019.HighscorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject28102019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HighscorePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="BackGround.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize="40" HorizontalAlignment="Center">Highscore:</Label>
        
        <TextBlock x:Name="HighscoreScore" FontSize="35" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Text="9999" HorizontalAlignment="Center" MinWidth="200" TextAlignment="Center"></TextBlock>
    </Grid>
</Page>
